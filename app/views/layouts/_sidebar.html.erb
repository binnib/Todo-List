<% if user_signed_in? %>
  <% if user_signed_in? && current_user.role?('manager') %>
    <% sidebar_items = { 'Dashboard' => dashboard_path,
                               'Projects' => projects_path
                       }
    %>
  <% else %>
    <% sidebar_items = { 'My ToDos' => todos_path } %>
  <% end %>
  <nav class="col-md-2 d-none d-md-block bg-light sidebar">
    <div class="sidebar-sticky">
      <ul class="nav flex-column">
        <% sidebar_items.each do |item, path| %>
          <li class="nav-item">
            <%= link_to path, class: "nav-link active" do %>
              <%= item %> <span class="sr-only">(current)</span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
<% end %>